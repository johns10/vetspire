<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <title><%= @page.title %> - <%= @site.name %></title>
    <script src="//unpkg.com/alpinejs" defer></script>
    <script type="text/javascript" src="<%= asset "js/pages.js" %>" defer></script>
    <script type="text/javascript" src="<%= asset "js/search.js" %>" defer></script>
    <link rel="stylesheet" href="<%= asset "css/style.css" %>">
    <link rel="stylesheet" href="<%= asset "css/prism.css" %>">
    <link rel="stylesheet" href="<%= asset "css/custom.css" %>">
    <%= include "head-extras" %>
  </head>
  <body>
    <div id="wrapper">
      <header id="top"><%= include "banner" %></header>
      <nav>
        <%= include "nav" %>
      </nav>
      <hr>
      <main><%= @contents %></main>
      <hr>
      <footer>
        <%= include "footer" %>
        <p>
          Powered by a bunch of hamsters running on a wheel
        </p>
      </footer>
    </div>
    <script src="<%= asset "js/prism.js" %>"></script>
  </body>
</html>
